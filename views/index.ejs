
<% layout('layouts/boilerplate') %>
<body>
    <div class="container mt-5">
        <form action="/todo/add" method="POST" class="needs-validation" novalidate>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h2 class="text-center mb-4">Add your Task</h2>
          <div class="input-group mb-3">
 <input type="text" name="title" id="title" class="form-control" placeholder="Enter your task" required>
                        <button type="submit" class="btn btn-dark">Add</button>
               <div class="invalid-feedback">
       Please provide a task.
                        </div>
                    </div>
                          </div>
             </div>
        </form>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3 class="text-center my-4">All Tasks</h3>
                <div class="list-group">
                    <% for(let todo of list) { %>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span id="task-title-<%= todo._id %>" class="<%= todo.completed ? 'completed' : '' %>">
                                <a href="/show/<%= todo._id %>" class="text-decoration-none task-link ">
                                    <%= todo.taskName %>
                                </a>
                            </span>
                           <button 
                                class="btn btn-warning" 
                                onclick="toggleMark('<%= todo._id %>')"
                                id="mark-unmark-<%= todo._id %>"
                            >
                                <%= todo.completed ? 'Unmark' : 'Mark Task' %>
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

   
</body>

