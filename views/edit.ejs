<% layout('layouts/boilerplate') %>
<body>

    <div class="container mt-5">
        <h2 class="text-center">Edit Your Task</h2>

        <form action="/todo/edit/<%= edit._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="taskName" class="form-label">Task Name</label>
                <input type="text" name="taskName" id="taskName" class="form-control" value="<%= edit.taskName %>" required>
                <div class="invalid-feedback">
                    Please enter updated task name.
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update Task</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <script src="/js/script.js"></script>

  
    
</body>

