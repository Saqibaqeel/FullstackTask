<% layout('layouts/boilerplate') %>
<body>
    <div class="container mt-5">
        <h3 class="text-center">Task Details</h3>
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title"><%= todoId.taskName %></h5>
            </div>
        </div>

       
        <div class="text-center">
           
            <a href="/todo/edit/<%= todoId._id %>" class="btn btn-primary">Edit Task</a>
            <form action="/todo/delete/<%= todoId._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger">Delete Task</button>
            </form>
            <a href="/" class="btn btn-secondary">Back to Tasks</a>
        </div>
    </div>
    
</body>

